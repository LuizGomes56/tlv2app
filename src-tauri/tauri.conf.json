{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "tlv2app",
    "version": "0.1.0",
    "identifier": "tlv2app",
    "build": {
        "frontendDist": "../frontend/dist",
        "devUrl": "http://localhost:8080",
        "beforeDevCommand": "cd frontend && trunk serve --release",
        "beforeBuildCommand": "cd frontend && trunk build --release"
    },
    "app": {
        "windows": [
            {
                "center": true,
                "dragDropEnabled": true,
                "title": "TutorLoL Native",
                "width": 1280,
                "height": 720,
                "resizable": true,
                "fullscreen": false,
                "transparent": true,
                "decorations": false,
                "shadow": false,
                "alwaysOnTop": true,
                "visible": false,
                "focus": false,
                "skipTaskbar": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "msi",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}